# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

#Variables App
GET 		/lifecircle/variables/load_all						controllers.VariablesApp.loadAllVariables()
POST 		/lifecircle/variables/create						controllers.VariablesApp.createVariable()
POST 		/lifecircle/variables/update						controllers.VariablesApp.updateVariable()

#LookUps
GET         /lifecircle/lookup/load/:category                   controllers.LookUp.load(category:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
